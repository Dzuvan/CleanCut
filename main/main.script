local monrach = require "monarch.monarch"
local defsave = require "defsave.defsave"
local data = require "main.data"

function init(self)
	msg.post(".", "acquire_input_focus")
	defsave.appname = "clean_cut"
	defsave.default_data = data

	defsave.load("config")
	defsave.load("player")
	pprint(defsave.get("config", "config"))
	data.config = defsave.get("config", "config")

	msg.post("#", "show_first_screen")
end

function on_message(self, message_id, message, sender)
	if message_id == hash("show_first_screen") then monrach.show("main_menu") end
end

function final()
	defsave.save_all()
end